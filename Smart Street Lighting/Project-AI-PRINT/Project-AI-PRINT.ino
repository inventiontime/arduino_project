////////////////////////////////////////////////   AppInterface   /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
byte info[7];
boolean trafficOn = true;
int trafficD[3] = {1, 1, 1};
int lightD = 0;
int lightI = 55;
int irThreshold;

////////////////////////////////////////////////   Setup   ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
void setup() {
  Serial.begin(9600);
  Serial.write(1);
}

////////////////////////////////////////////////   Loop   ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
void loop() {
  reciveInfo();
  readInfo();
  Serial.println(trafficOn);
}

////////////////////////////////////////////////   reciveInfo   ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
void reciveInfo(){
  for(int i = 0; i < 7; i++){
    if(Serial.available()){
      info[i] = Serial.read();
    }else{
      i--;
    }
  }
  Serial.write(1);
}

////////////////////////////////////////////////   readInfo   ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
void readInfo(){
  trafficOn = boolean(info[0]);
  trafficD[0] = int(info[1]);
  trafficD[1] = int(info[2]);
  trafficD[2] = int(info[3]);
  lightD = int(info[4]);
  lightI = int(info[5]);
  irThreshold = int(info[6]);
}

